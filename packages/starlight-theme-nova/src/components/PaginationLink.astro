---
import ChevronRightIcon from '../icons/lucide-chevron-right.svg'
import ChevronLeftIcon from '../icons/lucide-chevron-left.svg'

interface Props {
  label: string
  href: string
  rel: 'next' | 'prev'
  side: 'left' | 'right'
}

const { label, href, rel, side } = Astro.props
---

<a href={href} rel={rel} data-side={side} class="nova-pagination-link group">
  <span>{label}</span>

  {
    side === 'right' ? (
      <ChevronRightIcon class="min-w-5 min-h-5 block transition group-hover:translate-x-1" />
    ) : (
      <ChevronLeftIcon class="min-w-5 min-h-5 block transition group-hover:-translate-x-1" />
    )
  }
</a>
