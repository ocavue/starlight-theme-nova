---
const { hasSidebar } = Astro.locals.starlightRoute
---

<div class="flex min-h-screen flex-col">
  <header
    class="fixed inset-0 z-(--sl-z-index-navbar) box-border h-(--sl-nav-height) w-full border-0 border-b border-solid border-(--sl-color-hairline) bg-(--sl-color-bg-nav) px-(--sl-nav-pad-x) py-(--sl-nav-pad-y) backdrop-blur"
  >
    <slot name="header" />
  </header>
  {
    hasSidebar && (
      <nav
        class="sidebar print:hidden"
        aria-label={Astro.locals.t('sidebarNav.accessibleLabel')}
        id="nova-sidebar-nav"
      >
        <div
          id="starlight__sidebar"
          class:list={[
            'sidebar-pane',
            'invisible visible border-0 border-solid border-(--sl-color-hairline) max-md:w-full md:visible md:w-(--sl-sidebar-width) md:border-r [body[data-mobile-menu-expanded]_&]:max-md:visible',
          ]}
        >
          <div class="sidebar-content sl-flex">
            <slot name="sidebar" />
          </div>
        </div>
      </nav>
    )
  }
  <div class="main-frame"><slot /></div>
</div>

<style>
  @layer nova {
    .sidebar-pane {
      position: fixed;
      z-index: var(--sl-z-index-menu);
      inset-block: var(--sl-nav-height) 0;
      inset-inline-start: 0;
      background-color: var(--sl-color-black);
      overflow-y: auto;
    }

    .sidebar-content {
      height: 100%;
      min-height: max-content;
      padding: 1rem var(--sl-sidebar-pad-x) 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    .main-frame {
      padding-top: calc(var(--sl-nav-height) + var(--sl-mobile-toc-height));
      padding-inline-start: var(--sl-content-inline-start);
    }
  }
</style>
