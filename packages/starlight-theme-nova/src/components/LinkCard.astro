---
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'a'>, 'title' | 'class'> {
	title: string;
	description?: string;
}

const { title, description, ...attributes } = Astro.props;
---

<div class="nova-link-card">
<a
class="nova-link-card-link"
{...attributes}
>
  <span set:html={title} />
  <div class="nova-link-card-icon"></div>
</a>
{description && <span set:html={description} />}
</div>
