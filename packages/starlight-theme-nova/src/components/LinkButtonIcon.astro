---
import { Icon } from '@astrojs/starlight/components'
import type { StarlightIcon } from '@astrojs/starlight/types'
import ArrowRightIcon from '../icons/lucide-arrow-right.svg'
import ArrowLeftIcon from '../icons/lucide-arrow-left.svg'

interface Props {
  icon: StarlightIcon
}

const { icon } = Astro.props


---

{
  (icon === 'right-arrow') ? (
    <ArrowRightIcon class="nova-link-button-icon-right block" />
  ) : (icon === 'left-arrow') ? (
    <ArrowLeftIcon class="nova-link-button-icon-left block" />
  ) : (
    <Icon name={icon} size="1.25rem" />
  )
}
