{
  "name": "starlight-theme-nova",
  "type": "module",
  "version": "0.11.2",
  "description": "A beautiful theme for Astro Starlight",
  "author": "ocavue <ocavue@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/starlight-theme-nova#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocavue/starlight-theme-nova.git"
  },
  "bugs": "https://github.com/ocavue/starlight-theme-nova/issues",
  "keywords": [],
  "sideEffects": false,
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*.css": "./lib/*.css",
    "./components": "./src/components/index.ts",
    "./components/*.astro": "./src/components/*.astro"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "pnpm run build:tailwindcss",
    "build:tailwindcss": "tailwindcss -i ./lib/tailwind.css -o ./lib/tailwind.gen.css"
  },
  "dependencies": {
    "@aria-ui/core": "^0.0.22",
    "@pagefind/default-ui": "^1.4.0",
    "@shikijs/transformers": "^3.21.0",
    "@shikijs/twoslash": "^3.21.0",
    "@shikijs/types": "^3.21.0",
    "@types/hast": "^3.0.4",
    "astro-theme-toggle": "^0.8.0",
    "hast-util-is-element": "^3.0.0",
    "rehype": "^13.0.2",
    "remark-custom-header-id": "^1.0.0",
    "shiki-twoslash-renderer": "^0.1.0"
  },
  "peerDependencies": {
    "@astrojs/starlight": "*"
  },
  "peerDependenciesMeta": {
    "@astrojs/starlight": {
      "optional": true
    }
  },
  "devDependencies": {
    "@astrojs/starlight": "^0.37.2",
    "@ocavue/tsconfig": "^0.6.2",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^20.17.30",
    "astro": "^5.16.8",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
