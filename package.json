{
  "name": "starlight-theme-nova-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "description": "Root package for the Starlight Nova theme monorepo",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "build": "pnpm -r run build",
    "lint": "eslint .",
    "fix": "eslint --fix . && prettier --write .",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc -b",
    "change": "changeset",
    "ci:publish": "pnpm run build && pnpm publish --access public -r --no-git-checks --tag latest",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@ocavue/eslint-config": "^3.4.0",
    "@ocavue/tsconfig": "^0.5.0",
    "@types/node": "^20.17.30",
    "eslint": "^9.35.0",
    "pkg-pr-new": "^0.0.60",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.2"
  }
}
