{
  "name": "starlight-theme-nova-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "description": "Root package for the Starlight Nova theme monorepo",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "build": "turbo run build",
    "lint": "pnpm run lint:eslint && pnpm run lint:prettier",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --cache --check .",
    "fix": "pnpm run fix:eslint && pnpm run fix:prettier && pnpm run build:tailwindcss",
    "fix:eslint": "eslint --cache --fix .",
    "fix:prettier": "prettier --cache --write .",
    "build:tailwindcss": "pnpm --filter ./packages/starlight-theme-nova run build",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc -b",
    "test": "pnpm --filter starlight-theme-nova-website run test",
    "test:update": "pnpm --filter starlight-theme-nova-website run test:update",
    "test:install": "pnpm --filter starlight-theme-nova-website exec playwright install chromium",
    "change": "changeset",
    "ci:publish": "pnpm run build && pnpm publish --access public -r --no-git-checks --tag latest",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@ocavue/eslint-config": "^3.9.2",
    "@ocavue/tsconfig": "^0.6.2",
    "@types/node": "^20.17.30",
    "eslint": "^9.39.2",
    "pkg-pr-new": "^0.0.62",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  }
}
